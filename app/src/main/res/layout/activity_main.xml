<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.domain.drapps.firebaseimplementation.MainActivity"
    android:id="@+id/root_view"
    android:background="@drawable/gradient_background">
    <View android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#30ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
         >

    <EditText android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColorHint="@color/light_grey"
        android:background="@drawable/et_background"
        android:drawableLeft="@drawable/ic_account_circle_white_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:hint="@string/username"
        />

        <EditText android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/et_background"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_https_white_24dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/password"
            />
        <Button android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/btn_background"
            android:textColor="@color/light_grey"
            android:layout_margin="40dp"
            android:text="Login" />
    </LinearLayout>

</RelativeLayout>
